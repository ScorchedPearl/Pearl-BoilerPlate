{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                                  /* Use a modern ECMAScript version for better features. */
    "module": "commonJs",                                  /* Generate ESM module code. */
    "moduleResolution": "node",                          /* Resolve Node.js modules. */
    "rootDir": "./src",                                  /* Specify the root folder of your source files. */
    "outDir": "./build",                                 /* Specify the output directory for compiled files. */
    "esModuleInterop": true,                             /* Enable compatibility between CommonJS and ES Modules. */
    "allowSyntheticDefaultImports": true,                /* Allow default imports for non-ES modules. */
    "strict": true,                                      /* Enable all strict type-checking options. */
    "skipLibCheck": true,                                /* Skip type checking of declaration files to speed up compilation. */
    "resolveJsonModule": true,                           /* Enable importing JSON files. */
    "forceConsistentCasingInFileNames": true,            /* Ensure consistent file naming. */

    /* Emit */
    "declaration": true,                                 /* Generate .d.ts files for TypeScript declarations. */
    "declarationMap": true,                              /* Generate source maps for declaration files. */
    "sourceMap": true,                                   /* Generate source maps for debugging. */
    "inlineSources": true,                               /* Include source code in the source maps. */

    /* Experimental */
    "useDefineForClassFields": true,                     /* Use ECMAScript-standard class field behavior. */
    "emitDecoratorMetadata": true,                       /* Emit metadata for decorators. */
    "experimentalDecorators": true,                      /* Enable support for decorators. */

    /* Interop Constraints */
    "allowUmdGlobalAccess": false,                       /* Disallow accessing UMD globals from modules. */
    "isolatedModules": true                              /* Ensure each file can be safely transpiled independently. */
  },
  "include": ["src/**/*"],                                /* Include all TypeScript files in the src directory. */
  "exclude": ["node_modules", "build", "**/*.test.ts"]    /* Exclude dependencies, build output, and test files. */
}
